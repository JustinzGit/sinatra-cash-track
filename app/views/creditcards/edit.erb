<style>
.form-control {
    width: 200px;
  }
</style>

<h1>Edit creditcard</h1>
<div class="form-group">
  <form action="/creditcards/<%= @creditcard.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <p>Card Name: <input type="text" class="form-control" name="creditcard[name]" value="<%= @creditcard.name %>"></p>
    <p>Intrest Rate: <input type="number" min="0" step="0.01" class="form-control" name="creditcard[intrest_rate]" value="<%= @creditcard.intrest_rate %>"></p>
    <p>Balance: <input type="number" min="0" step="0.01" class="form-control" name="creditcard[balance]" value="<%= @creditcard.balance %>"></p>
    <p>Credit: <input type="number" min="0" step="0.01" class="form-control" name="creditcard[credit]" value="<%= @creditcard.credit %>"></p>
    <p>Minimum Payment Due: <input type="date" class="form-control" name="creditcard[duedate]" value="<%= @creditcard.duedate %>"></p>
    <input type="submit" value="Edit Card">
  </form>
</div>
