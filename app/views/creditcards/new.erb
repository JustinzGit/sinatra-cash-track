<h2 id="page-title">Provide Card Details</h2>
<div class="row justify-content-center">
  <div class="form-group">
    <form action="/creditcards" method="post">
      <p>Card Name: <input type="text" class="form-control" name="creditcard[name]" required></p>
      <p>Balance: <input type="number" min="0.00" step="0.01" class="form-control" name="creditcard[balance]" placeholder="$" required></p>
      <p>Credit: <input type="number" min="0.00" step="0.01" class="form-control" name="creditcard[credit]" placeholder="$" required></p>
      <p>Intrest Rate: <input type="number" min="0" step="0.01" class="form-control" name="creditcard[intrest_rate]" placeholder="%"required></p>
      <p>Minimum Payment Due: <input type="date" class="form-control" name="creditcard[duedate]" required></p>
      <input type="submit" value="Add Card">
    </form>
  </div>
</div>
